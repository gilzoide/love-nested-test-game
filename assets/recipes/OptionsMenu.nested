Frame

menuWidth: 600
menuHeight: 500

anchorX: [0.5 0.5] anchorY: [0 0]
marginTop: `-menuHeight`
marginLeft: `-menuWidth * 0.5`
marginRight: `menuWidth * 0.5`

bgColor: [0.12 0.12 0.12]
borderColor: [1 1 1]

options: { R options.save }

toggleCollapsed: `do
    TOGGLE_TWEEN.running = true
    self:invoke('ontogglecollapse', TOGGLE_TWEEN.rewinding)
end`

isOpen: `TOGGLE_TWEEN.value > 0`

message: "MESSAGE"

[Tween id: TOGGLE_TWEEN
    from: 0 to: 1
    duration: 0.5
    yoyo: true
    running: false
    easing: inOutCubic
]

[Transform y: `TOGGLE_TWEEN.value * menuHeight`
    [Rectangle id: MENU
        fillColor: `bgColor`
        lineColor: `borderColor`
        marginY: [50 -1]

        [Text id: TITLE text: PETECATAQUE font: { R Gontserrat-Medium.ttf 26 }
            align: center
            marginTop: 15
        ]

        [CheckBox id: MUSIC anchor: [0 0 0 1] margin: [60 30 92 -30]
            checked: `options.MUSIC`
            ontoggle: `do
                options.MUSIC = self.checked
                options:save()
                root:invoke('ontogglemusic')
            end`

